---
layout: base
---

#fullwidth
	#featurespanel
		%h2 Coral - Lightweight C++ component framework

#left-column
	#content.panel
		= render 'partials/listofarticles', :articles => sorted_articles, :limit => 5

#right-column
	#releasepanel
		- latest = sorted_articles_with_tag( 'release' ).select{ |a| a[:project] == 'coral' }.first
		#title Latest Release (BETA)
		#stable
			#{Time.parse( latest[:created_at] ).strftime( "%b %e, %Y" )} --
			%b #{latest[:version]}
			(#{download_links( 'coral', "v#{latest[:version]}" )})
			%br
			= link_to( "Release Notes", latest )
		#dev
			Latest development version: #{download_links( 'coral', 'master' )}

	#sidepanel
		#title Featured Modules
		#content
			- @config[:modules].each do |mod|
				#module
					%a(href="/modules/#{mod[:name]}.html" title="#{mod[:title]}")
						%img(src="/images/module.png")
					#info
						%a.title(href="/modules/#{mod[:name]}.html")= mod[:title]
						%p= mod[:description]
					#separator

	#sidepanel
		#title Twitter
		#content
			%script(src="http://widgets.twimg.com/j/2/widget.js")
			:javascript
				new TWTR.Widget({
				  version: 2,
				  type: 'profile',
				  rpp: 4,
				  interval: 6000,
				  width: 'auto',
				  height: 300,
				  theme: {
					shell: {
					  background: '#ffffff',
					  color: '#000000'
					},
					tweets: {
					  background: '#ffffff',
					  color: '#363534',
					  links: '#005493'
					}
				  },
				  features: {
					scrollbar: false,
					loop: false,
					live: false,
					hashtags: true,
					timestamp: true,
					avatars: false,
					behavior: 'all'
				  }
				}).render().setUser('libcoral').start();
